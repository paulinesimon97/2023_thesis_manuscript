@article{marsch_spectral_1990,
	title = {Spectral and spatial evolution of compressible turbulence in the inner solar wind},
	volume = {95},
	issn = {2156-2202},
	url = {https://agupubs.pericles-prod.literatumonline.com/doi/abs/10.1029/JA095iA08p11945},
	doi = {10.1029/JA095iA08p11945},
